<?xml version="1.0" encoding="UTF-8"?>

<scene>
	<windows>
		<size x="1080" y="720"/>
	</windows>

	<!--  -->

	<camera fov="60">
		<pos x="00" y="00" z="2000"/>
		<rot x="0" y="0" z="0"/>
	</camera>

	<!--  -->

	<lights ambient="10">
		<light>
		    <pos x="-700" y="200" z="500"/>
			<col r="100" g="100" b="100"/>
		</light>
	</lights>

	<!--  -->

	<objects>
		<plane shine="40">
			<perlin>
				<cloud scaler="8" octav="30" opacity="60"/>
			</perlin>
			<pos x="0" y="400" z="0"/>
			<rot x="180" y="0" z="0"/>
			<col r="0" g="40" b="70"/>
		</plane>

		<sphere radius="300" shine="40">
			<perlin>
				<wood turbpow="100" ringnb="20" scaler="12" octav="20" opacity="20"/>
			</perlin>
			<pos x="-300" y="-100" z="0"/>
			<rot x="0" y="0" z="0"/>
			<col r="75" g="60" b="40"/>
		</sphere>

		<sphere radius="300" shine="40">
			<perlin>
				<marble turbpow="700" linex="2" liney="0" scaler="12" octav="8" opacity="40"/>
			</perlin>
			<pos x="300" y="-100" z="0"/>
			<rot x="0" y="0" z="0"/>
			<col r="100" g="100" b="100"/>
		</sphere>

		<sphere radius="300" shine="40">
			<pos x="00" y="-600" z="0"/>
			<rot x="0" y="0" z="0"/>
			<col r="100" g="100" b="100"/>
		</sphere>
	</objects>
</scene>
